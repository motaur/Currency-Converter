<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="XML" injector-id="xml">
      <display-name>Button/@background</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("background")).withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("Button")))]]></place>
    </injection>
    <injection language="XML" injector-id="xml">
      <display-name>TextView/@textSize</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("textSize")).withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("TextView")))]]></place>
    </injection>
  </component>
</application>